<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu - Aluno"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="32dp" />

        <!-- Grid de Funções -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Minha Rotina -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:background="#BBDEFB"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/RotinaDiaria"
                    android:contentDescription="Minha Rotina" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minha Rotina"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Registro de Humor -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:background="#C8E6C9"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/RegistroDiario"
                    android:contentDescription="Registro de Humor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro de Humor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Jogos -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:background="#FFE082"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ControleVideoGame"
                    android:contentDescription="Jogos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jogos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F57C00"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Histórias Sociais -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:background="#F8BBD0"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/HistoriaSocial"
                    android:contentDescription="Histórias Sociais" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Histórias "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#880E4F"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Alerta Sensorial -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:background="#FFCDD2"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/Emocoes"
                    android:contentDescription="Alerta Sensorial" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alerta Sensorial"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#C62828"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
            <!-- Alerta Sensorial -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:background="#BBDEFB"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/Pecs"
                    android:contentDescription="Alerta Sensorial" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PECSs"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</ScrollView>