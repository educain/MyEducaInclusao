<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDEFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gerador de Atividades"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Botão: Selecionar Atividades PECS -->
        <Button
            android:id="@+id/btnSelecionarPECS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📌 Selecionar Atividades PECS"
            android:backgroundTint="#81D4FA"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Campo para Simplificar Atividade -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📝 Simplificar Atividade:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextoAtividade"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Cole aqui a atividade difícil"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:gravity="top|start"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSimplificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simplificar"
            android:backgroundTint="#81D4FA"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Lista de Atividades para Enviar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ Selecionar Atividades para Enviar:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade: Pintar os Animais"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade: Jogo de Memória PECS"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atividade: Arrumar os Blocos por Cores"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <!-- Botão Final: Enviar para o Aluno -->
        <Button
            android:id="@+id/btnEnviarAtividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar para Aluno"
            android:backgroundTint="#81D4FA"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>