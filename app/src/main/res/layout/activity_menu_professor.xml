<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu - Professor"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Botão: Meus Alunos -->
        <Button
            android:id="@+id/btnAlunos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👥 Meus Alunos"
            android:textSize="18sp"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Botão: Atividades -->
        <Button
            android:id="@+id/btnAtividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Atividades"
            android:textSize="18sp"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Botão: Relatórios -->
        <Button
            android:id="@+id/btnRelatorios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Relatórios"
            android:textSize="18sp"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Botão: Histórias Sociais -->
        <Button
            android:id="@+id/btnHistorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📚 Histórias Sociais"
            android:textSize="18sp"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Botão: Agenda Semanal -->
        <Button
            android:id="@+id/btnAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📅 Agenda Semanal"
            android:textSize="18sp"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Botão: Notificações -->
        <Button
            android:id="@+id/btnNotificacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔔 Notificações"
            android:textSize="18sp"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Botão: Mensagens -->
        <Button
            android:id="@+id/btnMensagens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💬 Mensagens"
            android:textSize="18sp"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Botão: Configurações -->
        <Button
            android:id="@+id/btnConfiguracoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Configurações"
            android:textSize="18sp"
            android:backgroundTint="#90CAF9"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>