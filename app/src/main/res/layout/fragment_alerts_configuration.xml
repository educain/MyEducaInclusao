<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="16dp">

    <!-- Título da Tela -->
    <TextView
        android:id="@+id/txtTituloAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerta Sensorial"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Campo: Título do Alerta -->
    <EditText
        android:id="@+id/edtTituloAlerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título do Alerta"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Campo: Mensagem do Alerta -->
    <EditText
        android:id="@+id/edtMensagemAlerta"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Mensagem do Alerta"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:gravity="top|start"
        android:layout_marginBottom="24dp" />

    <!-- Botão Enviar Alerta -->
    <Button
        android:id="@+id/btnEnviarAlerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Alerta"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

</LinearLayout>